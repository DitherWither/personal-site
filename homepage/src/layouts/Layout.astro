---
import "@fontsource/inter";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Portfolio and Contact page of Vardhan Patil, A web developer based in Kolhapur, India."
    />
    <title>{title}</title>
  </head>
  <body class="bg-cyan-50 dark:bg-cyan-950">
    <header>
      <Header />
    </header>
    <slot />
  </body>
</html>
